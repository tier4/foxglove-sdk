  "packageManager": "yarn@4.6.0",
  "workspaces": [
    "typescript/*",
    "playground",
    "python/foxglove-sdk/notebook-frontend"
  ],
  "scripts": {
    "build": "tsc -b",
    "bump-sdk-version": "ts-node ./scripts/bumpSdkVersion.ts",
