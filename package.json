    "@foxglove/tsconfig": "2.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "30.0.0",
    "@types/node": "22.13.0",
    "@types/semver": "^7",
    "ajv": "^8.12.0",
    "commander": "^10.0.0",
    "eslint": "9.34.0",
    "glob": "^11.1.0",
    "globals": "^15.14.0",
    "jest": "30.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-toml": "^2.0.1",
    "protobufjs": "^7.2.5",
    "rimraf": "^6.0.1",
    "semver": "^7.7.1",
    "smol-toml": "^1.4.1",
    "ts-jest": "29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.42.0"
  }
